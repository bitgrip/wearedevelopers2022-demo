{
  "name": "WeAreDevelopers2022",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "clean": "rm -Rf ./.next ./storybook-static ./reports *.log",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --coverage --reporters=default --reporters=jest-junit --maxWorkers=25%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_TOKEN"
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "lodash": "^4.17.21",
    "next": "^12.1.5",
    "postcss": "^8.4.12",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "slugify": "^1.6.5",
    "swr": "^1.2.1",
    "tailwindcss": "^3.0.22"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@storybook/addon-actions": "^6.5.0-beta.1",
    "@storybook/addon-essentials": "^6.5.0-beta.1",
    "@storybook/addon-interactions": "^6.5.0-beta.1",
    "@storybook/addon-links": "^6.5.0-beta.1",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.5.0-beta.1",
    "@storybook/testing-library": "^0.0.10",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.178",
    "@types/node": "17.0.18",
    "@types/react": "18.0.8",
    "apollo": "^2.33.9",
    "babel-loader": "^8.2.5",
    "chromatic": "^6.5.4",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "eslint-plugin-storybook": "^0.5.11",
    "jest": "^27.5.1",
    "jest-junit": "^13.2.0",
    "jest-runner-groups": "^2.1.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "coverageThreshold": {
      "global": {
        "lines": 0
      }
    },
    "coverageDirectory": "reports/coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,jsx}",
      "pages/**/*.{ts,tsx,jsx}",
      "!src/**/*.stories.{tsx,jsx}",
      "!src/**/index.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/test/",
      "/storybook-static/",
      "/.next/",
      "/.storybook/",
      "/.vscode/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html",
      "cobertura"
    ]
  },
  "jest-junit": {
    "suiteName": "WeAreDevelopers2022 jest-junit",
    "outputDirectory": "./reports/",
    "outputName": "jest-junit.xml",
    "uniqueOutputName": "false"
  }
}
